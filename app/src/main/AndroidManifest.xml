<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="co.edu.konrad.mediokapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/logo_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        //primer actividad Splash
        <activity
            android:name=".activities.Splash"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        //login activity

        //gym excercises activity
        <activity
            android:name=".activities.GymExerciseActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        //music gender activity
        <activity
            android:name=".activities.MusicGenderActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        //menu activity
        <activity
            android:name=".activities.MenuActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        //MultiLogin Activity
        <activity
            android:name=".activities.MultiLoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        //Google Login Activity
        <activity
            android:name=".activities.GoogleLoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />

    </application>

</manifest>